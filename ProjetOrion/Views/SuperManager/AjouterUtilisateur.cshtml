@model ProjetOrion.Models.Utilisateur

@{
    ViewBag.Title = "Ajout Utilisateur - Super Manager";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@section Menu {
    @Html.Partial("MenuSuperManager")
}
@section Footer {

}

<div class="row">
        @using (Html.BeginForm("EnregistrerUtilisateur", "SuperManager", FormMethod.Post, new { @class = "col-lg-offset-2 col-lg-8 form-horizontal" }))
        {
            <fieldset>
                <legend>Ajout d'un utilisateur</legend>
                <div class="form-group row">
                    <div class="col-lg-4">
                        @Html.LabelFor(user => user.Pseudo, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(user => user.Pseudo, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4">
                        @Html.LabelFor(user => user.Email, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-6">
                        @Html.TextBoxFor(user => user.Email, new {@class = "form-control", @type = "email" })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4">
                        @Html.LabelFor(user => user.MotDePasse, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-6">
                        @Html.PasswordFor(user => user.MotDePasse, new {@class = "form-control"})
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4">
                        @Html.LabelFor(user => user.ConfirmerMotDePasse, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-6">
                        @Html.PasswordFor(user => user.ConfirmerMotDePasse, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group row">
                    <input type="submit" class="btn btn-primary pull-left" value="Sauvegarder" />
                </div>
            </fieldset>
        }
</div>

@section ScriptJs
{
    <script>
        $(function() {
        });
    </script>
}
