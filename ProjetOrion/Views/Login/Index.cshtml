@using System.Web.UI.WebControls
@model ProjetOrion.Models.UtilisateurViewModel


@{
    ViewBag.Title = "Authentification";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

<div class="container">
    @if (Model.Authentifie)
{
    <h3>
        Vous êtes déjà authentifié avec le login :
        @Model.Utilisateur.Pseudo
    </h3>
    @Html.ActionLink("Voulez-vous vous déconnecter ?", "Deconnexion")
}
else
{
    <p>
        Veuillez vous authentifier :
    </p>
            using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "col-lg-offset-2 col-lg-8 form-horizontal", ReturnUrl = Request.QueryString["ReturnUrl"] }))
            {
            <fieldset>
                <legend>Connexion à la plate-forme AfriqueCompétences</legend>
                <div class="form-group row">
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        @Html.TextBoxFor(m => m.Utilisateur.Pseudo, new { @placeholder = "Pseudo", @class = "form-control", @required = true, @autofocus = true })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        @Html.PasswordFor(m => m.Utilisateur.MotDePasse, new { @placeholder = "Password", @class = "form-control", @required = true })
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        <input type="submit" class="btn btn-primary pull-left" id="connexion" value="Se connecter" />
                    </div>
                </div>
            </fieldset>
        }
    }
</div>


