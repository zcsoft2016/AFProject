@model ProjetOrion.Models.UtilisateurViewModel

@{
    ViewBag.Title = "Ajout Utilisateur - Super Manager";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}

@section Menu {
    @Html.Partial("MenuSuperManager", @Model)
}
@section Footer {

}

<div class="row">
        @using (Html.BeginForm("AjouterUtilisateur", "SuperManager", FormMethod.Post, new { @class = "col-lg-offset-1 col-lg-10 form-horizontal" }))
        {
            <fieldset>
                <legend>Ajout d'un utilisateur</legend>
                <div class="form-group row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.LabelFor(user => user.Utilisateur.Pseudo, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        @Html.TextBoxFor(user => user.Utilisateur.Pseudo, new {@class = "form-control", @id = "pseudo"})
                    </div>
                    <div class="col-lg-3  col-md-3 col-sm-3">
                        @*@Html.ValidationMessageFor(user=>user.Utilisateur.Pseudo)*@
                        @ViewBag.ErrorPseudo
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.LabelFor(user => user.Utilisateur.Email, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        @Html.TextBoxFor(user => user.Utilisateur.Email, new {@class = "form-control", @type = "email", @id = "email" })
                    </div>
                    <div class="col-lg-3  col-md-3 col-sm-3">
                        @*@Html.ValidationMessageFor(user => user.Utilisateur.Email)*@
                        @ViewBag.ErrorEmail
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        @Html.LabelFor(user => user.Utilisateur.MotDePasse, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-5 col-md-5 col-sm-5">
                        @Html.PasswordFor(user => user.Utilisateur.MotDePasse, new {@class = "form-control", @id = "motDePasse"})
                    </div>
                    <div class="col-lg-3  col-md-3 col-sm-3">
                        @*@Html.ValidationMessageFor(user => user.Utilisateur.MotDePasse)*@
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-4  col-md-4 col-sm-4">
                        @Html.LabelFor(user => user.Utilisateur.ConfirmerMotDePasse, new { @class = "control-label pull-left" })
                    </div>
                    <div class="col-lg-5  col-md-5 col-sm-5">
                            @Html.PasswordFor(user => user.Utilisateur.ConfirmerMotDePasse, new {@class = "form-control", @id = "confirmMotDePasse"})
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            @*@Html.ValidationMessageFor(user => user.Utilisateur.ConfirmerMotDePasse)*@
                           @ViewBag.ErrorPassword
                        </div>
                </div>
                <div class="form-group row">
                    <input type="submit" class="btn btn-primary pull-left" id="sauvegarder" value="Sauvegarder" />
                </div>
            </fieldset>
        }
</div>

@section ScriptJs
{

    <script src="~/Content/js/jquery.js"></script>
    <script>
        $(function () {
            $("#sauvegarder").onclick(function () {
                    alert("Click sur un bouton");
               });
        });
    </script>
}
